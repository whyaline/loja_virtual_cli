#!/usr/bin/env python3
"""
CLI amigável para a loja virtual.
Uso: loja <entidade> <comando> [opções]
Exemplos:
    loja seed
    loja clientes listar
    loja produtos listar
"""

import sys
from main import main

def main_wrapper():
    """Chama o main do projeto passando os argumentos da CLI."""
    args = sys.argv[1:]  # ignora o nome do script
    if not args:
        print("Uso: loja <entidade> <comando> [opções]")
        return 1

    # Define sys.argv como se fosse o main
    sys.argv = [sys.argv[0]] + args
    return main()

if __name__ == "__main__":
    try:
        sys.exit(main_wrapper())
    except KeyboardInterrupt:
        print("\nExecução interrompida pelo usuário.")
        sys.exit(1)
